@model List<LibraryAutomation.MVC.Models.ViewModels.RentalViewModel>

@{
    ViewData["Title"] = "Geçmiş Kiralamalarım";
}

<h2>Geçmiş Kiralamalarım</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kitap Adı</th>
            <th>Kiralama Tarihi</th>
            <th>Son Teslim Tarihi</th>
            <th>İade Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var rental in Model)
            {
                <tr>
                    <td>@rental.BookTitle</td>
                    <td>@rental.RentalDate.ToShortDateString()</td>
                    <td>@rental.DueDate?.ToShortDateString()</td>
                    <td>@rental.ReturnDate?.ToShortDateString()</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Geçmiş kiralamalarınız bulunmamaktadır.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="MyActiveRentals" asp-controller="User" class="btn btn-primary">Şu An Bende Olan Kitaplar</a>

