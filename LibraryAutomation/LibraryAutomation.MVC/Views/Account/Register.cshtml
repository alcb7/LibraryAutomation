@using LibraryAutomation.MVC.Models.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}
@if (TempData["RegistrationSuccess"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["RegistrationSuccess"]
    </div>
}
<div class="register-container">
    <div class="register-box">
        <h2 class="register-title">Hesap Oluştur</h2>
        <p class="register-subtitle">Lütfen kayıt olmak için formu doldurun</p>

        <form asp-action="Register" method="post" class="register-form">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Email Input -->
            <div class="form-group">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-input" placeholder="E-posta adresinizi girin" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- First Name Input -->
            <div class="form-group">
                <label asp-for="FirstName" class="form-label">Ad</label>
                <input asp-for="FirstName" class="form-input" placeholder="Adınızı girin" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name Input -->
            <div class="form-group">
                <label asp-for="LastName" class="form-label">Soyad</label>
                <input asp-for="LastName" class="form-input" placeholder="Soyadınızı girin" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="form-group">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" class="form-input" placeholder="Şifrenizi girin" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Input -->
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Şifreyi Onayla</label>
                <input asp-for="ConfirmPassword" class="form-input" placeholder="Şifrenizi tekrar girin" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Register Button -->
            <div class="form-group">
                <button type="submit" class="register-button">Kayıt Ol</button>
            </div>

            <!-- Login Link -->
            <div class="login-link">
                <p>Zaten bir hesabınız var mı? <a asp-controller="Account" asp-action="Login">Giriş Yap</a></p>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        /* Ana Container */
        .register-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        /* Register Box */
        .register-box {
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        /* Başlık */
        .register-title {
            font-size: 1.75rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #333;
        }

        /* Alt Başlık */
        .register-subtitle {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 2rem;
        }

        /* Form Inputları */
        .form-input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
            margin-bottom: 1rem;
            transition: border-color 0.3s ease;
        }

            .form-input:focus {
                border-color: #007bff;
                outline: none;
            }

        /* Register Button */
        .register-button {
            width: 100%;
            padding: 0.75rem;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .register-button:hover {
                background-color: #0056b3;
            }

        /* Login Link */
        .login-link {
            margin-top: 1rem;
            font-size: 0.9rem;
            color: #666;
        }

            .login-link a {
                color: #007bff;
                text-decoration: none;
                font-weight: 500;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}